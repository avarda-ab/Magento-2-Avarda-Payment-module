                   as="avarda_payments_invoice"
                   template="Avarda_Payments::checkout/payment/method/avarda-payment.phtml">
                <arguments>
                    <argument name="magewire" xsi:type="object">
                        \Avarda\Payments\Model\Magewire\Checkout\Payment\Method\AvardaPayments
                    </argument>
                    <argument name="metadata" xsi:type="array">
                        <item name="subtitle" xsi:type="string">payment/avarda_payments_invoice/instructions</item>
                    </argument>
                </arguments>
            </block>
            <block name="checkout.payment.method.avarda_payments_direct_invoice"
